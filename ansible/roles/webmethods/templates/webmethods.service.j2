[Unit]
Description=webMethods API Gateway
After=network.target

[Service]
Type=forking
User=root
Group=root
EnvironmentFile=/opt/softwareag/webmethods.env
ExecStart=/opt/softwareag/profiles/IS_default/bin/startup.sh
ExecStop=/opt/softwareag/profiles/IS_default/bin/shutdown.sh
Restart=on-failure
RestartSec=10
TimeoutStartSec=300
TimeoutStopSec=60

[Install]
WantedBy=multi-user.target
