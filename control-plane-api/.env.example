# Control Plane API Environment Configuration
# Copy this file to .env and fill in your values

# OpenSearch Configuration
OPENSEARCH_HOST=https://opensearch.stoa.cab-i.com
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=
# CAB-838: SSL certificate verification (default: true for security)
# Set to "false" only for local development with self-signed certificates
OPENSEARCH_VERIFY_CERTS=true
# Optional: Custom CA certificate path (leave empty to use system CA bundle)
# OPENSEARCH_CA_CERTS=/path/to/ca-bundle.crt

# Audit Settings
AUDIT_ENABLED=true
AUDIT_BUFFER_SIZE=100
AUDIT_FLUSH_INTERVAL=5.0
