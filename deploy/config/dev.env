# APIM Platform - Development Environment Configuration
# This file contains all environment-specific variables for dev deployment

# ============================================
# API Configuration
# ============================================
API_VERSION=2.0.0
API_DEBUG=false
ENABLE_DEPLOYMENT_WORKER=true

# ============================================
# Keycloak Configuration
# ============================================
KEYCLOAK_URL=https://auth.apim.cab-i.com
KEYCLOAK_REALM=apim
KEYCLOAK_CLIENT_ID=control-plane-api
KEYCLOAK_CLIENT_SECRET=  # Set via Kubernetes secret

# ============================================
# GitLab Configuration
# ============================================
GITLAB_URL=https://gitlab.com
GITLAB_PROJECT_ID=47495759
GITLAB_TOKEN=  # Set via Kubernetes secret
GITLAB_WEBHOOK_SECRET=  # Set via Kubernetes secret

# ============================================
# Kafka (Redpanda) Configuration
# ============================================
KAFKA_BOOTSTRAP_SERVERS=redpanda.apim-system.svc.cluster.local:9092

# ============================================
# AWX Configuration
# ============================================
AWX_URL=https://awx.apim.cab-i.com
AWX_TOKEN=  # Set via Kubernetes secret

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=https://devops.apim.cab-i.com,http://localhost:3000

# ============================================
# UI Configuration (Build-time variables)
# ============================================
VITE_API_URL=/api
VITE_KEYCLOAK_URL=https://auth.apim.cab-i.com
VITE_KEYCLOAK_REALM=apim
VITE_KEYCLOAK_CLIENT_ID=control-plane-ui

# ============================================
# Domain Configuration
# ============================================
DOMAIN_API=api.apim.cab-i.com
DOMAIN_UI=devops.apim.cab-i.com
DOMAIN_AUTH=auth.apim.cab-i.com
DOMAIN_GATEWAY=gateway.apim.cab-i.com
DOMAIN_AWX=awx.apim.cab-i.com
