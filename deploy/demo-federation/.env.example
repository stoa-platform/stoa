# =============================================================================
# STOA Federation Demo - Environment Configuration
# =============================================================================
# Copy this file to .env and customize as needed:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Keycloak (Authentication)
# -----------------------------------------------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# OpenLDAP (Gamma IdP)
# -----------------------------------------------------------------------------
LDAP_ADMIN_PASSWORD=admin-password

# -----------------------------------------------------------------------------
# Service Ports
# -----------------------------------------------------------------------------
PORT_KEYCLOAK=8080
PORT_GATEWAY=9000
PORT_LDAP=1389
PORT_OPA=8181

# -----------------------------------------------------------------------------
# Docker Compose Settings
# -----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=stoa-federation-demo
