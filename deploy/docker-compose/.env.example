# =============================================================================
# STOA Platform Quick Start - Environment Configuration
# =============================================================================
# Copy this file to .env and customize as needed:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=stoa
POSTGRES_PASSWORD=stoa-quickstart-2045
POSTGRES_DB=stoa_platform

# -----------------------------------------------------------------------------
# Keycloak (Authentication)
# -----------------------------------------------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Grafana (Dashboards)
# -----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# -----------------------------------------------------------------------------
# Service Ports
# Change these if you have port conflicts on your machine
# -----------------------------------------------------------------------------
PORT_DB=5432
PORT_KEYCLOAK=8080
PORT_API=8000
PORT_CONSOLE=3000
PORT_PROMETHEUS=9090
PORT_GRAFANA=3001

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Docker Compose Settings
# -----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=stoa-quickstart
