{
  "realm": "stoa",
  "enabled": true,
  "displayName": "STOA Platform",
  "displayNameHtml": "<div class=\"kc-logo-text\"><span>STOA Platform</span></div>",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "accessTokenLifespan": 3600,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "roles": {
    "realm": [
      {
        "name": "cpi-admin",
        "description": "Full platform administrator - can manage all tenants and system settings"
      },
      {
        "name": "tenant-admin",
        "description": "Tenant administrator - can manage their own tenant's APIs and users"
      },
      {
        "name": "devops",
        "description": "DevOps engineer - can deploy and promote APIs"
      },
      {
        "name": "viewer",
        "description": "Read-only access to tenant resources"
      }
    ]
  },
  "clients": [
    {
      "clientId": "control-plane-api",
      "name": "STOA Control Plane API",
      "description": "Backend API Service",
      "enabled": true,
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "api-dev-secret",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": false,
      "protocol": "openid-connect",
      "redirectUris": [
        "http://localhost:8000/*"
      ],
      "webOrigins": [
        "http://localhost:8000"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    },
    {
      "clientId": "control-plane-ui",
      "name": "STOA Console",
      "description": "Admin Console for API Providers",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "protocol": "openid-connect",
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:5173/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:5173"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "protocolMappers": [
        {
          "name": "control-plane-api-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "control-plane-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "stoa-portal",
      "name": "STOA Developer Portal",
      "description": "Developer Portal for API Consumers",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "protocol": "openid-connect",
      "redirectUris": [
        "http://localhost:3001/*"
      ],
      "webOrigins": [
        "http://localhost:3001"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "protocolMappers": [
        {
          "name": "control-plane-api-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "control-plane-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "stoa-mcp-gateway",
      "name": "STOA MCP Gateway",
      "description": "MCP Gateway Service",
      "enabled": true,
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "mcp-dev-secret",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "protocol": "openid-connect",
      "redirectUris": [
        "http://localhost:8081/*"
      ],
      "webOrigins": [
        "http://localhost:8081"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    }
  ],
