# STOA Control Plane - Environment Variables
# Copy this file to .env and customize values

# ─────────────────────────────────────────────────────────────────
# Application Settings
# ─────────────────────────────────────────────────────────────────
STOA_APP_NAME=stoa-control-plane
STOA_DEBUG=false
STOA_LOG_LEVEL=INFO
STOA_HOST=0.0.0.0
STOA_PORT=8080

# ─────────────────────────────────────────────────────────────────
# Database (PostgreSQL)
# ─────────────────────────────────────────────────────────────────
STOA_DB_HOST=localhost
STOA_DB_PORT=5432
STOA_DB_NAME=stoa
STOA_DB_USER=stoa
STOA_DB_PASSWORD=stoa-quickstart-secret

# ─────────────────────────────────────────────────────────────────
# Invite System
# ─────────────────────────────────────────────────────────────────
STOA_INVITE_EXPIRY_DAYS=7
STOA_INVITE_BASE_URL=https://demo.gostoa.dev
STOA_PORTAL_URL=https://portal.gostoa.dev

# ─────────────────────────────────────────────────────────────────
# Rate Limiting
# ─────────────────────────────────────────────────────────────────
STOA_RATE_LIMIT_INVITES=10/minute
