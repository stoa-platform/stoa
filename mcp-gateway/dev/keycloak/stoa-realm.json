{
  "realm": "stoa",
  "enabled": true,
  "displayName": "STOA Platform",

  "_comment_security": "CAB-940: Keycloak Hardening (mirrors production)",

  "sslRequired": "all",
  "registrationAllowed": false,
  "registrationEmailAsUsername": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "rememberMe": false,
  "verifyEmail": true,

  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 300,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 28800,
  "clientSessionIdleTimeout": 1800,
  "clientSessionMaxLifespan": 28800,

  "revokeRefreshToken": true,
  "refreshTokenMaxReuse": 0,

  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 5,

  "passwordPolicy": "length(12) and digits(1) and upperCase(1) and lowerCase(1) and specialChars(1) and notUsername and passwordHistory(5)",

  "eventsEnabled": true,
  "eventsExpiration": 604800,
  "eventsListeners": ["jboss-logging"],
  "adminEventsEnabled": true,
  "adminEventsDetailsEnabled": true,
  "enabledEventTypes": [
    "LOGIN", "LOGIN_ERROR", "LOGOUT", "LOGOUT_ERROR",
    "CODE_TO_TOKEN", "CODE_TO_TOKEN_ERROR",
    "CLIENT_LOGIN", "CLIENT_LOGIN_ERROR",
    "REFRESH_TOKEN", "REFRESH_TOKEN_ERROR",
    "REGISTER", "REGISTER_ERROR",
    "UPDATE_PASSWORD", "UPDATE_PASSWORD_ERROR",
    "SEND_RESET_PASSWORD", "SEND_RESET_PASSWORD_ERROR",
    "REVOKE_GRANT", "REMOVE_TOTP", "UPDATE_TOTP",
    "CLIENT_REGISTER", "CLIENT_DELETE"
  ],

  "browserSecurityHeaders": {
    "contentSecurityPolicyReportOnly": "",
    "xContentTypeOptions": "nosniff",
    "xRobotsTag": "none",
    "xFrameOptions": "DENY",
    "contentSecurityPolicy": "frame-src 'self'; frame-ancestors 'none'; object-src 'none';",
    "xXSSProtection": "1; mode=block",
    "strictTransportSecurity": "max-age=31536000; includeSubDomains"
  },
  "roles": {
    "realm": [
      {
        "name": "cpi-admin",
        "description": "Full platform administrator"
      },
      {
        "name": "tenant-admin",
        "description": "Tenant administrator"
      },
      {
        "name": "devops",
        "description": "DevOps engineer - can deploy and promote APIs"
      },
      {
        "name": "viewer",
        "description": "Read-only access"
      }
    ]
  },
  "clients": [
    {
      "clientId": "stoa-mcp-gateway",
      "name": "STOA MCP Gateway",
      "description": "MCP Gateway Service",
      "enabled": true,
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "dev-secret",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": false,
      "protocol": "openid-connect",
      "redirectUris": [
        "http://localhost:8080/*"
      ],
      "webOrigins": [
        "http://localhost:8080"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    },
    {
      "clientId": "stoa-test-client",
      "name": "STOA Test Client",
      "description": "Client for testing MCP Gateway",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "protocol": "openid-connect",
      "redirectUris": [
        "http://localhost:*"
      ],
      "webOrigins": [
        "*"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    },
    {
      "clientId": "control-plane-ui",
      "name": "STOA Console",
      "description": "Admin Console for STOA Platform",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "protocol": "openid-connect",
      "redirectUris": [
        "https://console.gostoa.dev/*",
        "https://console.dev.gostoa.dev/*",
        "https://console.staging.gostoa.dev/*",
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "https://console.gostoa.dev",
        "https://console.dev.gostoa.dev",
        "https://console.staging.gostoa.dev",
        "http://localhost:3000"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "protocolMappers": [
        {
          "name": "control-plane-api-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "control-plane-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "stoa-portal",
      "name": "STOA Developer Portal",
      "description": "Developer Portal for MCP Tools and API Subscriptions",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "protocol": "openid-connect",
      "redirectUris": [
        "https://portal.gostoa.dev/*",
        "https://portal.dev.gostoa.dev/*",
        "https://portal.staging.gostoa.dev/*",
        "http://localhost:3001/*"
      ],
      "webOrigins": [
        "https://portal.gostoa.dev",
        "https://portal.dev.gostoa.dev",
        "https://portal.staging.gostoa.dev",
        "http://localhost:3001"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "protocolMappers": [
        {
          "name": "control-plane-api-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "control-plane-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "admin",
      "email": "admin@stoa.local",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin",
          "temporary": false
        }
      ],
      "realmRoles": [
        "cpi-admin"
      ]
    },
    {
      "username": "tenant-admin",
      "email": "tenant@stoa.local",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Tenant",
      "lastName": "Admin",
      "credentials": [
        {
          "type": "password",
          "value": "tenant",
          "temporary": false
        }
      ],
      "realmRoles": [
        "tenant-admin"
      ]
    },
    {
      "username": "devops",
      "email": "devops@stoa.local",
      "enabled": true,
      "emailVerified": true,
      "firstName": "DevOps",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "devops",
          "temporary": false
        }
      ],
      "realmRoles": [
        "devops"
      ]
    },
    {
      "username": "viewer",
      "email": "viewer@stoa.local",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Viewer",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "viewer",
          "temporary": false
        }
      ],
      "realmRoles": [
        "viewer"
      ]
    }
  ]
}
