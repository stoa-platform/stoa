# Terraform Variables Example for DEV environment
# Copy this file to terraform.tfvars and fill in your values

environment = "dev"
aws_region  = "eu-west-1"

vpc_cidr           = "10.0.0.0/16"
availability_zones = ["eu-west-1a", "eu-west-1b"]

project_name = "apim"
domain_name  = "apim-dev.votredomaine.com"

# Instance types (cost optimized for DEV/TEST)
webmethods_instance_type = "t3.large"
portal_instance_type     = "t3.medium"
jenkins_instance_type    = "t3.medium"
vault_instance_type      = "t3.small"

# OpenSearch
opensearch_instance_type = "t3.small.search"
opensearch_volume_size   = 20

# ECS Fargate Control Plane
control_plane_cpu    = 256
control_plane_memory = 512

# Tags
tags = {
  Project     = "APIM"
  Environment = "dev"
  ManagedBy   = "Terraform"
  CostCenter  = "Platform"
  Owner       = "platform-team@votreentreprise.com"
}
